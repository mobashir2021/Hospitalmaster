    <script src="~/loginscripts/vendor/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginscripts/vendor/popper.js"></script>
    <script src="~/loginscripts/vendor/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginscripts/vendor/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginscripts/vendor/moment.min.js"></script>
    <script src="~/loginscripts/vendor/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginscripts/vendor/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginscripts/vendor/main.js"></script>

</body>
</html>
