@*@model IEnumerable<HospitalManagementSys.Models.EXPENS>*@
@model PagedList.IPagedList<HospitalManagementSys.Models.EXPENS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Item
        </th>
        <th>
            Quantity
        </th>
        <th>
            Total Amount
        </th>
        <th>
            Expense Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        
        <td>
            @Html.DisplayFor(modelItem => item.ITEM.ITEMNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QUANTITY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TOTALAMOUNT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EXPENSEDATE.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EXPENSEID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EXPENSEID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EXPENSEID })
        </td>
    </tr>
}

</table>

<div style="background-color:azure;display:inline-block;border-radius:2px;">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("   <<", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("< Prev", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @:< Prev
    }

    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next >", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
</div>
